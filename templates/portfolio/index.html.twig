{% extends 'base.html.twig' %}

{% block title %}Mes Projets - Portfolio{% endblock %}

{% block body %}
<section class="portfolio-section container py-5">
  <h1 class="text-center mb-5 gradient fw-bold display-5">Mes Projets</h1>
  <div class="timeline"></div>

  {% for categorie, projets in categories %}
    <div class="category-block text-center mb-5">
      <h2 class="gradient fw-bold mb-5">{{ categorie }}</h2>

      {% for projet in projets %}
        <div class="row align-items-center mb-5 project-row {% if loop.index is odd %}left{% else %}right{% endif %}">
          {% if loop.index is odd %}
            <div class="col-md-6 text-center">
              <img src="{{ asset('images/projets/' ~ projet.image) }}" alt="{{ projet.titre }}" class="project-img img-fluid rounded-4 shadow-lg">
            </div>
            <div class="col-md-6 text-start">
              <div class="project-text p-4">
                <h3 class="fw-bold">{{ projet.titre }}</h3>
                <p class="opacity-75">{{ projet.description }}</p>
                <span class="badge bg-primary">{{ projet.tech }}</span>
              </div>
            </div>
          {% else %}
            <div class="col-md-6 text-end">
              <div class="project-text p-4">
                <h3 class="fw-bold">{{ projet.titre }}</h3>
                <p class="opacity-75">{{ projet.description }}</p>
                <span class="badge bg-primary">{{ projet.tech }}</span>
              </div>
            </div>
            <div class="col-md-6 text-center">
              <img src="{{ asset('images/projets/' ~ projet.image) }}" alt="{{ projet.titre }}" class="project-img img-fluid rounded-4 shadow-lg">
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% endfor %}
</section>

<script>
document.addEventListener("scroll", () => {
  document.querySelectorAll(".project-row").forEach(el => {
    const rect = el.getBoundingClientRect();
    if (rect.top < window.innerHeight - 100) el.classList.add("visible");
  });
});
</script>
{% endblock %}
